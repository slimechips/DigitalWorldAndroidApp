#:kivy 1.10.1
#File name: login.py
#: import appdimens appdimens
#: import appstrings appstrings
#: import appcolours appcolours

<LoginPage>:
    name: "loginpage"
    BackgroundImage:
        id: background_image
    BoxLayout:
        orientation: "vertical"
        size_hint: 0.8, 1
        spacing: 30
        pos_hint: {"x": 0.1}
        Widget:
            id: login_space_top
            size_hint_y: 0.05
        Label:
            id: easy_eat_txt
            text: appstrings.appname
            size_hint_y: None
            font_size: appdimens.title_font_size
            color: appcolours.def_blue
        Widget:
            id: login_space_mid
            size_hint_y: 0.05
        Label:
            id: username_txt
            text: "Username"
            size_hint_y: None
            size: self.texture_size
            text_size: self.size
            halign: "left"
            font_size: appdimens.label_font_size
            halign: "left"
            padding: 0, 0
            color: appcolours.def_blue
        TransparentInput:
            id: login
            size_hint_y: None
            hint_text: "example@email.com"
        Label:
            id: password_txt
            text: "Password"
            size_hint_y: None
            text_size: self.size
            size: self.texture_size
            font_size: appdimens.label_font_size
            color: (1, 1, 1, 1)
            halign: "left"
            color: appcolours.def_blue
        TransparentInput:
            id: passw
            size_hint_y: None
            password: True
        SmoothButton:
            id: login_button
            size_hint_y: None
            text: "[b]Login[/b]"
            markup: True
            font_size: appdimens.button_font_size
            on_release: root.verify_credentials()
            background_normal: ""
            btn_color: appcolours.login_green
        StrokeButton:
            id: signup_button
            size_hint_y: None
            text: "[b]Sign Up[/b]"
            markup: True
            font_size: appdimens.button_font_size
            on_release: root.signup()
            back_color: 0.6, 0.8, 1, 1     
        Widget:
            id: space_login_btm
            size_hint: 1, 0.9

<SignUpPage>:
    name: "signup"
    BackgroundImage:
        id: background_image
    BoxLayout:
        orientation: "vertical"
        size_hint: 0.8, 1
        spacing: 50
        height: self.minimum_height
        pos_hint: {"x": 0.1}
        Label:
            id: signup_txt_title
            text: "Sign up"
            font_size: appdimens.title_font_size
            color: appcolours.signup_blue
            size_hint: 1, None
            size: self.texture_size
            spacing: 20
        TransparentInput:
            id: email_signup_input
            hint_text: "Email Address"
        TransparentInput:
            id: username_signup_input
            hint_text: "Username"
        TransparentInput:
            id: passw_signup_input
            hint_text: "Password"
            password: True
        TransparentInput:
            id: passw_confirm_signup_input
            hint_text: "Retype Password"
            password: True
        SmoothButton:
            size_hint: 0.8, None
            size_y: passw_confirm_signup_input.line_height
            pos_hint: {"x": 0.1}
            text: "Sign Up"
            font_size: appdimens.button_font_size
            on_release: root.firebase_signup()
            background_normal: ""
            btn_color: appcolours.signup_blue
        Label:
            id: info_text
            text: ""
            font_size: appdimens.label_font_size
            color: 1.0, 0.2, 0.2, 1
            size_hint: 1, None
            size: self.texture_size
        Widget:
            id: space_signup
            size_hint: 1, 1

# Custom Button
<SmoothButton@Button>:
    background_color: 0, 0, 0, 0
    background_normal: ''
    border_radius: [50]
    btn_color: 0, 0, 0, 1
    size_hint: 1, None
    size_y: self.line_height
    canvas.before:
        Color:
            rgba: self.btn_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

# Custom Button
<StrokeButton@Button>:
    background_color: 0, 0, 0, 0
    background_normal: ''
    border_radius: 50
    back_color: 1, 0, 1, 1
    color: self.back_color
    bold: True
    size_hint: 1, None
    size_y: self.line_height
    canvas.before:
        Color:
            rgba: self.back_color
        Line:
            rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
            width: 1.2

# Custom InputField
<TransparentInput@TextInput>:
    size_hint: 1, None
    font_size: appdimens.label_font_size
    height: self.minimum_height
    multiline: False
    background_color: [0, 0, 0, 0]
    cursor_color: [1, 1, 1, 1]
    foreground_color: appcolours.WHITE
    write_tab: False
    cur_line_colour: self.normal_line_colour
    normal_line_colour: [0.8, 0.8, 0.8, 1]
    focus_line_colour: [0, 0.8, 0.8, 1]
    wrong_line_colour: appcolours.wrong_cred_colour
    canvas.after:
        Color:
            rgba: self.cur_line_colour
        Line:
            points: [self.x, self.y, self.x + self.width, self.y]

# Bg of the app
<BackgroundImage@Image>:
    pos: self.pos
    size_hint: 1, 1
    source: 'res/SUTDcanteenPotrait.png'
    allow_stretch: True
    keep_ratio: False
    color: 1, 1, 1, 0.3