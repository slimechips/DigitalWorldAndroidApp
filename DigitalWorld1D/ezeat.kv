#:kivy 1.10.1
#File name: main.py
#:include login.kv
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    LoginPage:
    SignUpPage:
    MainPage:


<MainPage>:
    name: "main"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Button:
        color: 1, 1, 1, 1
        font_size: root._buttonfontsize
        size_hint: 0.3, 0.2
        pos_hint: {"right": 1, "top": 1}
        text: "Logout"
        on_release: app.root.current = "login"