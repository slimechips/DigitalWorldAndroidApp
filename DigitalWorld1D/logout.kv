#:kivy 1.10.1

# LogOutBottomNavBar object inheriting from ActionBar
# Has 2 buttons: Stalls, My Orders
<LogoutBottomNavBar>:
    ActionView:
        id: logout_btm_bar_view
        ActionPrevious:
            with_previous: False
        ActionToggleButton:
            id: stalls_btn
            text: 'Stalls'
            on_release: app.root.current = 'stalls'
            allow_no_selection: False
            group: "logout_btm_bar"
        ActionToggleButton:
            id: my_orders_btn
            text: 'My Orders'
            on_release: app.root.current = 'my_orders'
            allow_no_selection: False
            group: "logout_btm_bar"

# Logout_Confirm screen inheriting from Screen
<Logout_Confirm>:
    name: "logout_pg"

    # Background color of 0.8, 0.8, 0.8
    # Takes up whole screen
    canvas.before:
        Color:
            rgba: 0.8, 0.8, 0.8
        Rectangle:
            pos: self.pos
            size: self.size

    # BoxLayout to contain two nav bars and screen content
    BoxLayout:
        orientation: "vertical"
        TopNavigationBar:
            id: top_bar
            text: "Logout"
        Label:
            id: logout_text
            text: "Do you want to log out?"
            font_size: root._title_font_size/2
            color: 0, 0, 0, 1
        
        # Custom button SmoothButton
        SmoothButton:
            font_size: appdimens.button_font_size
            size_hint: 0.8, None
            pos_hint: {"center_x": 0.5, "top": 0.15}
            text: "Logout"
            on_release: app.root.current = "loginpage"
            background_normal: ""
            btn_color: appcolours.signup_blue
        LogoutBottomNavBar:
            id: btm_bar
        

