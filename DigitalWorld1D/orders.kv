#:kivy 1.10.1

<My_Orders>:
    name: "my_orders"
    canvas.before:
        Color:
            rgb: 0.8, 0.8, 0.8
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        TopNavigationBar:
            id: top_bar
            text: "My Orders"
        GridLayout:
            id: orders_grd
            cols: 2
            column_default_force: True,
            column_default_width: Window.width/2
            height: self.minimum_height
            spacing: 10
            padding: 20
            size_hint_y: None
            Label:
                id: order_pic
                text: 'picture here'
                color: 0, 0, 0, 1
            Label:
                id: order_details
                halign: 'left'
                valign: 'middle'
                text: '{Food Item}\nSpecial Requests: {}\nEstimated Waiting Time: {}\nOrders In Queue: {}\nStall: {}'
                # text_size: self.size
                color: 0, 0, 0, 1
        BottomNavigationBar:
            id: btm_bar
            my_orders_btm: "down"
