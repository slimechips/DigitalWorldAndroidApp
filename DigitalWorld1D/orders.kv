#:kivy 1.10.1

<My_Orders>:
    name: "my_orders"
    canvas.before:
        Color:
            rgb: 0.8, 0.8, 0.8
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        id: orders_box
        TopNavigationBar:
            id: top_bar
            text: "My Orders"
        ScrollView:
            size: self.size
            do_scroll_y: True
            BoxLayout:
                id: orders_box_box
                orientation: "vertical"
                spacing: 10
                padding: 20
                size_hint_y: None
        BottomNavigationBar:
            id: btm_bar