#:kivy 1.10.1

<My_Orders>:
    name: "my_orders"
    canvas.before:
        Color:
            rgb: 0.8, 0.8, 0.8
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: "vertical"
        TopNavigationBar:
            id: top_bar
            text: "My Orders"
        ScrollView:
            size: self.size
            do_scroll_y: True
            GridLayout:
                id: orders_grd
                cols: 2
                column_default_force: True,
                column_default_width: Window.width/2
                height: self.minimum_height
                spacing: 10
                padding: 20
                size_hint_y: None
        BottomNavigationBar:
            id: btm_bar